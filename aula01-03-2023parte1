
package aula01032023;
import java.util.Scanner;

public class Aula01032023 { 
    
    public static void main(String[] args) {
        Scanner leia = new Scanner(System.in);
        double numero1,numero2,resultado;
        
        System.out.println("Insira o primeiro numero: ");
        numero1 = leia.nextDouble();
        
        System.out.println("Insira o segundo numero: ");
        numero2 = leia.nextDouble();
        
        resultado = numero1 + numero2;
        System.out.println("O resultado da soma entre dois numeros é: "+resultado);
        resultado= numero1-numero2;
        System.out.println("O resultado da subtração entre dois numeros é: "+resultado);
        resultado= numero1/numero2;
        System.out.println("O resultado da divisão entre dois numeros é: "+resultado);
        resultado= numero1*numero2;
        System.out.println("O resultado da multiplicação entre dois numeros é: "+resultado);
    }
    
}
